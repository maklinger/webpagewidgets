{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/result.schema.json",
  "title": "Simulation Result",
  "type": "object",
  "properties": {
    "type": { "type": "string", "default": "dataframe" },
    "data": {
      "type": "object",
      "properties": {
        "x": { "type": "array", "items": {"type": "number"} },
        "y": { "type": "array", "items": {"type": "number"} },
        "z": { "type": "array", "items": {"type": "number"} },
        "label": { "type": "string" }
      },
      "required": ["x", "y"]
    },
    "meta": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "xlabel": { "type": "string" },
        "ylabel": { "type": "string" },
        "zlabel": { "type": "string" }
      },
      "required": ["xlabel", "ylabel"]
    }
  },
  "required": ["type", "data", "meta"]
}
